<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>
        <%- include('../partials/header.ejs') %> 
        <main>
            <div class="list-group">
                <% for (animal of animals) { %> 
                <article >
                    <h2
                    hx-get="/animals/<%= animal._id %>"
                    hx-trigger="click"
                    hx-target="main"
                    hx-swap=innerHTML
                    class="list-group-item list-group-item-action">
                        <%= animal.species %>
                    </h2>
                </article>
                <% } %> 
                <a class="list-group-item list-group-item-action" href="/animals/new">Add new animal</a>
            </div>
        </main>
    </body>
</html>