<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css" type="text/css">
    <title>Document</title>
</head>
<body>
    <% 
    const capitalizeWords = str => {
        let res = [];
        for (word of str.split(' ')) {
            res.push(word.charAt(0).toUpperCase() + word.substring(1));
        }
        return res.join(' ');
    }
    %> 

    <h1>Drinks</h1>

    <ul>
        <% for (let i = 0; i < drinks.length; i++) { %>
            <li onclick="location.href='/drinks/<%= i %>';">
                <div>
                    <%= capitalizeWords(drinks[i].name) %> 
                </div>
                <div>
                    $<%= drinks[i].price %> 
                </div>
            </li>
        <% } %> 
    </ul>
    <a href="/" style="text-align: center;margin-top:5px;">Go Home</a>
</body>
</html>